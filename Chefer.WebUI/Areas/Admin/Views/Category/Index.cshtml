@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
}

<h3>Kategoriler</h3>

@{
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <th>@item.CategoryName</th>
            <th>
                <a href="/Admin/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a>
                <a href="/Admin/Category/UpdateCategory/@item.CategoryId" class="btn btn-info">Güncelle</a>
            </th>

        </tr>
    }

</table>

<a href="/Admin/Category/CreateCategory/" class="btn btn-danger">Yeni Kategory</a>
